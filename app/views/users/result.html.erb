<h1>検索結果</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @results.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <% if current_user != user %>
          <td><%= render 'follow_form', user: user %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>