<h1>今日の進捗</h1>

<div>
  <%= "-------達成度-------" %>
</div>

<div class="progress-percentage text-xs-center"><%= (daily_task_terminate_count.to_i*100/daily_task_max_count.to_i).floor %>%</div>
<progress class="progress progress-striped" max="100" value=<%= (daily_task_terminate_count.to_i*100/daily_task_max_count.to_i).floor %>></progress>


<h1>マイタスク</h1>

<% @customs.each do |custom| %>
  <% unless custom.id == 1 %>
    <div>
      <%= "---------------------" %>
    </div>
    <div>
      <%= "✅" %>
      <%= custom.title %>
    </div>
    <div>
      <% custom.task_ids.each do |task_id| %>  
        <% task = Task.find(task_id) %>
        <% status = TaskStatus.where(created_at: Time.zone.now.all_day).find_by(task_id: task_id) %>
        <div>
          <%= check_box_tag 'task_status[task_status]', true, status.task_status, { data: { url: custom_url(status.id) + '/task_status/', method: :post, remote: true , id: 1}} %>
          <%= task.name %>
        </div>
      <% end %>
    </div>
    <br>
  <% end %>
<% end %>

